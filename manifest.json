{
	"manifest_version": 2,
	"name": "TypeSmart",
	"version": "0.5",
	"description": "Automatically format quotes, apostrophes, dashes, and symbols with their typographically correct characters.",
	"author": "Maxim Leyzerovich",
	"homepage_url": "https://github.com/round/TypeSmart-beta",
	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"64": "icon64.png",
		"128": "icon128.png"
	},
	"content_scripts": [{
		"matches": ["<all_urls>"],
		"js": ["content.js"]
		"all_frames": true,
	}],
	"browser_action": {},
 	"permissions": [
 		"storage"
	 ],
	"background": {
		"scripts":["background.js"],
	 }
}
